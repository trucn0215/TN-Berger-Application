<div class="burger">
    <h1 class="">Eat Da Burger!!</h1>
    <img src="../public/assets/img/Burger.png" class="burger-img w3-center" alt="Burger">

    <h2>What Burger Do you Want?</h2>
    <form class="burger-input">
        <div class="submit">
            <input type="text" name="name">
            <button>Submit!</button>
        </div>
    </form>

    <div class="burger-list w3-container w3-cell-row">
        <div class="add-burger w3-container w3-cell">
            <h2>Burger Ordered</h2>
            <div>
                <div>
                    {{#each burgers}}
                    {{#unless devour}}
                    {{> burgers/burger_block devour = true}}
                    {{/unless}}
                    {{/each}}
                    <button>Devour!</button>
                </div>
            </div>
        </div>

        <div class="devoured w3-container w3-cell">
            <h2>Devoured!!</h2>
            <div>
                <div>
                    {{#each burgers}}
                    {{#if devour}}
                    {{> burgers/burger_block devour = false}}
                    {{/if}}
                    {{/each}}
                    <button>Remove!</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="burger">
    <h1 class="title">Eat Da Burger!!</h1>
    <img src="assets/img/Burger.png" class="burger-img w3-center" alt="Burger">

    <h2>What Burger Do you Want?</h2>
    <form class="burger-input">
        <div class="submit">
            <input type="text" name="name">
            <button>Submit!</button>
        </div>
    </form>

    <div class="burger-list w3-container w3-cell-row">
        <div class="add-burger w3-container w3-cell">
            <h2>Burger Ordered</h2>
            <div>
                <div>
                    {{#each burger}}
                    {{#unless devoured}}
                    <li>Burger: {{burger_name}}  <button>Devour!</button></li>
                    {{/unless}}
                    {{/each}}
                </div>
            </div>
        </div>

        <div class="devoured w3-container w3-cell">
            <h2>Devoured!!</h2>
            <div>
                <div>
                    {{#each burger}}
                    {{#if devoured}}
                    <li>Burger: {{burger_name}}  <button>Remove!</button></li>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>